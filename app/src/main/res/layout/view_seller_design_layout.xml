<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/TvbuyerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BuyerName"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvbuyerAdderss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BuyerAddress"
        android:inputType="textMultiLine"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvcontactNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ContactNumber"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvmobileCM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvmobileColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvmobilerSerialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SerialNumber"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Tvdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TvsellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SellerName"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/callbtn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:shadowColor="@android:color/black"
            android:src="@drawable/ic_call_white_24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:id="@+id/btnGetPdf"
            android:text="Get PDF"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:shadowColor="@android:color/black"
            />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>