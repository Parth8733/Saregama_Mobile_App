<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repairing_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutID"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select the Date"
            android:gravity="center"
            android:clickable="true"
            android:focusable="false"
            android:id="@+id/dateEtd"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFind"
                android:text=" View "
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:shadowColor="@android:color/black"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFromTo"
                android:text="Detail Data "
                android:textColor="@android:color/white"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:shadowColor="@android:color/black"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnpdfAll"
                android:text=" GET PDF "
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:shadowColor="@android:color/black"
                />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_history"
        android:layout_below="@+id/linearLayoutID"
        >
    </android.support.v7.widget.RecyclerView>


</RelativeLayout>