<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RepairInquiry"
    android:background="@drawable/my_custom_background"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repair Inquiry Form"
            android:textSize="30dp"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/sell-title"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/overlayBackground"
            android:layout_marginTop="10dp"
            android:id="@+id/divider"
            android:layout_below="@+id/sell-title"
            android:layout_marginBottom="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inptxtname"
            android:layout_below="@+id/divider"
            app:hintAnimationEnabled="true"
            app:boxBackgroundColor="@color/colorPrimary"
            app:boxStrokeColor="@color/colorPrimary"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Buyer Name :"
                android:inputType="textCapSentences"
                android:id="@+id/repair_inq_name"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inptxtmob"
            android:layout_below="@+id/buy-inptxtname"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="number"
                android:hint="Mobile Number :"
                android:id="@+id/repair_inq_mob"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inptxtmobprice"
            android:layout_below="@+id/buy-inptxtmob"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textCapSentences"
                android:hint="Slip Number :"
                android:id="@+id/repair_inq_slipno"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inptxtmobquan"
            android:layout_below="@+id/buy-inptxtmobprice"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Model :"
                android:inputType="textCapSentences"
                android:id="@+id/repair_inq_model"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inptxtmobsenum"
            android:layout_below="@+id/buy-inptxtmobquan"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Engineer :"
                android:inputType="textCapCharacters"
                android:id="@+id/repair_inq_eng"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inpsellname"
            android:layout_below="@+id/buy-inptxtmobsenum"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Problem :"
                android:inputType="textCapSentences"
                android:id="@+id/repair_inq_prbl"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inpsellitem"
            android:layout_below="@+id/buy-inpsellname"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Received Items :"
                android:inputType="textCapSentences"
                android:id="@+id/repair_inq_item"
                />
        </android.support.design.widget.TextInputLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@+id/buy-inpsellitem"
                android:hint="Date :"
                android:id="@+id/repair_inq_date"
                android:clickable="true"
                android:focusable="false"
                />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buy-inpsellername"
            android:layout_below="@+id/repair_inq_date"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Seller Name :"
                android:inputType="textCapSentences"
                android:id="@+id/repair_inq_sell_name"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Submit"
            android:textSize="20dp"
            android:id="@+id/submit"
            android:layout_gravity="center"
            android:layout_below="@+id/buy-inpsellername"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/circle_button"
            />
    </RelativeLayout>
</ScrollView>