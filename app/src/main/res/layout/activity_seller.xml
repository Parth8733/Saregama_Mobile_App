<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller"
    android:background="@drawable/my_custom_background"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selling Product Form"
        android:textSize="30dp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/sell-title"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/overlayBackground"
        android:layout_marginTop="10dp"
        android:id="@+id/divider"
        android:layout_below="@+id/sell-title"
        android:layout_marginBottom="10dp"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inptxtname"
        android:layout_below="@+id/divider"
        app:hintAnimationEnabled="true"
        app:boxBackgroundColor="@color/colorPrimary"
        app:boxStrokeColor="@color/colorPrimary"
        >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Buyer Name :"
        android:inputType="textCapSentences"
        android:id="@+id/buy-name"
        />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inptxtadd"
        android:layout_below="@+id/buy-inptxtname"
        app:hintAnimationEnabled="true"
        app:boxBackgroundColor="@color/colorPrimary"
        app:boxStrokeColor="@color/colorPrimary"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Buyer Address :"
            android:inputType="textPostalAddress"
            android:id="@+id/buy-add"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inptxtmob"
        android:layout_below="@+id/buy-inptxtadd"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Mobile Number :"
            android:id="@+id/buy-mob"
            />
    </android.support.design.widget.TextInputLayout>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:accessibilityPaneTitle="Select Brand"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_below="@+id/buy-inptxtmob"
            android:id="@+id/buy-mob-company"
            android:clickable="false"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_below="@+id/buy-mob-company"
            android:id="@+id/buy-mob-brand"
            />

    <Spinner
        android:id="@+id/buy_mob_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buy-mob-brand"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inptxtmobprice"
        android:layout_below="@+id/buy_mob_color"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:inputType="number"
            android:hint="Mobile Price :"
            android:id="@+id/buy-mob-price"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inptxtmobquan"
        android:layout_below="@+id/buy-inptxtmobprice"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Available Quantity :"
            android:inputType="number"
            android:id="@+id/buy-mob-quantity"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inptxtmobsenum"
        android:layout_below="@+id/buy-inptxtmobquan"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Mobile Serial Number :"
            android:inputType="textCapCharacters"
            android:id="@+id/buy-mob-serialnumb"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy-inpsellname"
        android:layout_below="@+id/buy-inptxtmobsenum"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Seller Name :"
            android:inputType="textCapSentences"
            android:id="@+id/sell-name"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Submit"
        android:textSize="20dp"
        android:id="@+id/submit"
        android:layout_gravity="center"
        android:layout_below="@+id/buy-inpsellname"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_button"
        />
</RelativeLayout>
</ScrollView>